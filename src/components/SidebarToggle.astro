<button class="sidebar-toggle" aria-label="Toggle Sidebar">
  <svg class="menu-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <line x1="3" y1="12" x2="21" y2="12"></line>
    <line x1="3" y1="6" x2="21" y2="6"></line>
    <line x1="3" y1="18" x2="21" y2="18"></line>
  </svg>
  <svg class="close-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <line x1="18" y1="6" x2="6" y2="18"></line>
    <line x1="6" y1="6" x2="18" y2="18"></line>
  </svg>
</button>

<style>
  .sidebar-toggle {
    display: none;
    position: fixed;
    top: 1rem;
    right: 1rem;
    z-index: 200;
    padding: 0.75rem;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-text);
    cursor: pointer;
    box-shadow: var(--shadow-sm);
    transition: all 0.2s ease;
  }

  .sidebar-toggle:hover {
    background: var(--color-bg-dark);
  }

  .sidebar-toggle .menu-icon {
    display: block;
  }

  .sidebar-toggle .close-icon {
    display: none;
  }

  .sidebar-toggle svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  :global(.sidebar-open) .sidebar-toggle .menu-icon {
    display: none !important;
  }

  :global(.sidebar-open) .sidebar-toggle .close-icon {
    display: block !important;
  }

  @media (max-width: 960px) {
    .sidebar-toggle {
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }
</style>

<script>
  const toggleButton = document.querySelector('.sidebar-toggle');
  const layout = document.querySelector('.layout');

  if (toggleButton && layout) {
    toggleButton.addEventListener('click', () => {
      layout.classList.toggle('sidebar-open');
      console.log('Sidebar toggled:', layout.classList.contains('sidebar-open')); // デバッグ用
    });
  }
</script> 