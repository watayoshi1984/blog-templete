---
import { RichText } from '../../../lib/interfaces.ts'

/**
 * @interface Props
 * @description Bold.astroのPropsのインターフェース
 */
export interface Props {
  richText: RichText
}

const { richText } = Astro.props
---

{
  /* prettier-ignore
     * Annotation.Boldが真の場合に<b>タグで囲む
     * そうでない場合は、そのままslotを表示する
     * prettier-ignore を使用している理由：改行を保持するため
     */
  richText.Annotation.Bold ? (
    <b><slot /></b>
  ) : (
    <slot />
  )
}

<style>
  b {
    font-weight: 700;
    color: var(--color-text-heading);
  }

  @media (max-width: 640px) {
    b {
      font-weight: 600;
    }
  }
</style>

<!--
  改善点:
    - Propsのインターフェース定義をより具体的にする (例: RichText型の中身を定義)
-->
