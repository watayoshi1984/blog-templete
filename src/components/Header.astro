---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import { SITE_TITLE } from '../server-constants';

export interface Props {
  title?: string;
  iconPath?: string;
}

const { title = SITE_TITLE, iconPath } = Astro.props;
---

<header>
  <div class="header-content">
    <div class="site-info">
      <div class="logo">
        <Image
          src="/icon.jpg"
          alt="Site Icon"
          width={40}
          height={40}
          class="icon"
        />
        <a href="/">NEXT Nurse</a>
      </div>
    </div>
    <div class="controls">
      <slot />
    </div>
  </div>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: transparent;
    border-bottom: 1px solid var(--color-border);
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }

  .header-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .site-info {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .controls {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5em;
  }

  .logo a {
    color: var(--color-text);
    text-decoration: none;
    font-weight: 700;
    font-size: 1.2em;
  }

  .icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .nav-links a {
    color: var(--color-text);
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s ease;
  }

  .nav-links a:hover {
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .header-content {
      padding: 0.5rem;
    }
    
    .controls {
      gap: 0.5rem;
    }

    .nav-links {
      display: none;
    }
  }
</style> 